log 4j.xml
<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
 
<log4j:configuration>
 
    <!-- Appender for console output -->
<appender name="console" class="org.apache.log4j.ConsoleAppender">
<layout class="org.apache.log4j.PatternLayout">
<param name="ConversionPattern" value="%d{HH:mm:ss} %-5p %c{1} - %m%n"/>
</layout>
</appender>
 
    <!-- Appender for INFO level to a file -->
<appender name="infoFile" class="org.apache.log4j.FileAppender">
<param name="File" value="C:/Users/chandrasekaran/.eclipse/BiteBudddy/logs/info.log"/>
<param name="Append" value="true"/>
<param name="Threshold" value="INFO"/>
<layout class="org.apache.log4j.PatternLayout">
<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1} - %m%n"/>
</layout>
</appender>
 
    <!-- Appender for DEBUG level to a file -->
<appender name="debugFile" class="org.apache.log4j.FileAppender">
<param name="File" value="C:/Users/chandrasekaran/.eclipse/BiteBudddy/logs/debug.log"/>
<param name="Append" value="true"/>
<param name="Threshold" value="DEBUG"/>
<layout class="org.apache.log4j.PatternLayout">
<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1} - %m%n"/>
</layout>
</appender>
 
    <!-- Appender for ERROR level to a file -->
<appender name="errorFile" class="org.apache.log4j.FileAppender">
<param name="File" value="C:/Users/chandrasekaran/.eclipse/BiteBudddy/logs/error.log"/>
<param name="Append" value="true"/>
<param name="Threshold" value="ERROR"/>
<layout class="org.apache.log4j.PatternLayout">
<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1} - %m%n"/>
</layout>
</appender>
 
    <!-- Define a logger for your package to control output to files -->
<logger name="servlets" additivity="true">
<level value="DEBUG"/>
<appender-ref ref="infoFile"/>
<appender-ref ref="debugFile"/>
<appender-ref ref="errorFile"/>
</logger>
 
    <!-- The root logger which all other loggers inherit from by default -->
<root>
<level value="all"/>
<appender-ref ref="console"/>
</root>
 
</log4j:configuration>


Loggerutil.class
package com.bite.util;
 
import org.apache.log4j.LogManager;
import org.apache.log4j.Logger;
 
public class LoggerUtil {
	 public static final Logger logger = LogManager.getLogger("CentralLogger");
       public static Logger getLogger(Class<?> clazz) {
    	    return LogManager.getLogger(clazz);
    	  }
 
	    public static void info(String msg) {
	        logger.info( msg);
	    }
 
	    public static void debug(String msg) {
	        logger.debug(msg);
	    }
 
	    public static void error(String msg) {
	        logger.error(msg);
	    }
 
		public static void trace(String msg) {
			logger.trace(msg);
		}
 
		public static void warn(String msg) {
			logger.warn(msg);
		}
 
}

